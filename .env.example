# Server Configuration
NODE_ENV=production
PORT=5000

# Database
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database

# JWT Authentication
JWT_SECRET=your_strong_random_secret_here_use_openssl_rand_base64_32
JWT_EXPIRE=30d

# Frontend URLs (for CORS and email links)
ADMIN_URL=https://your-admin-panel.vercel.app
USER_URL=https://your-user-website.vercel.app

# Email Configuration
# Option 1: SendGrid (Recommended for production)
# Get free API key from: https://signup.sendgrid.com/
SENDGRID_API_KEY=your-sendgrid-api-key-here

# Option 2: Gmail (For local development only)
# Generate App Password: https://myaccount.google.com/apppasswords
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-gmail-app-password-16-characters

# Email Settings
EMAIL_FROM=your-email@gmail.com
EMAIL_FROM_NAME=Classic Carrry
OWNER_EMAIL=owner-email@gmail.com

# SMTP Settings (Gmail defaults)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false

# Cloudinary (Image Storage)
# Get from: https://cloudinary.com/console
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret
