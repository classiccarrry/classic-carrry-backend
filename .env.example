# Server Configuration
NODE_ENV=production
PORT=5000

# Database
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database

# JWT Authentication
JWT_SECRET=your_strong_random_secret_here_use_openssl_rand_base64_32
JWT_EXPIRE=30d

# Frontend URLs (for CORS and email links)
ADMIN_URL=https://your-admin-panel.vercel.app
USER_URL=https://your-user-website.vercel.app

# Email Configuration
# SendGrid (Recommended for production - Free 100 emails/day)
# Sign up: https://signup.sendgrid.com/
# Get API key: Settings → API Keys → Create API Key
SENDGRID_API_KEY=SG.your-sendgrid-api-key-here

# Gmail (For local development only)
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-gmail-app-password

# Email Settings
EMAIL_FROM=your-verified-email@gmail.com
EMAIL_FROM_NAME=Classic Carrry

# SMTP Settings (Gmail defaults)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false

# Cloudinary (Image Storage)
# Get from: https://cloudinary.com/console
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret
